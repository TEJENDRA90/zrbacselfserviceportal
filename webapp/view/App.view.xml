<mvc:View
	controllerName="rbacselfserviceportal.zrbacselfserviceportal.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout"
	displayBlock="true">
	
	<App id="app">
		<Page id="mainPage" showHeader="false">
			<content>
				<layout:HorizontalLayout width="100%" height="100%">
					
					<!-- Sidebar Navigation -->
					<VBox width="300px" 
						  height="100%" 
						  class="sidebar-container"
						  alignItems="Stretch">
						
						<!-- Header with Logo and Title -->
						<VBox class="sidebar-header">
							<HBox alignItems="Center" class="sapUiMediumMargin">
								<core:Icon src="sap-icon://arrow-up" 
										   size="2rem" 
										   color="#0073e6" 
										   class="sapUiTinyMarginEnd"/>
								<Text text="Auth Portal" 
									  class="sapUiLargeFontSize sapUiTextBold"/>
							</HBox>
						</VBox>
						
						<!-- Navigation Menu -->
						<ScrollContainer height="100%" 
										vertical="true" 
										class="sidebar-nav">
							<VBox class="sapUiMediumMargin">
								
								<!-- Dashboard -->
								<Button id="dashboardItem"
										text="Dashboard"
										icon="sap-icon://home"
										iconFirst="false"
										press="onNavItemPress"
										data-route="dashboard"
										class="nav-button"
										type="Transparent"/>
								
								<!-- Role Management -->
								<Button id="rolesItem"
										text="Role Management"
										icon="sap-icon://person-placeholder"
										iconFirst="false"
										press="onNavItemPress"
										data-route="roles"
										class="nav-button"
										type="Transparent"/>
								
								<!-- Default Assignments -->
								<Button id="assignmentsItem"
										text="Default Assignments"
										icon="sap-icon://document-text"
										iconFirst="false"
										press="onNavItemPress"
										data-route="assignments"
										class="nav-button"
										type="Transparent"/>
								
								<!-- Exception Handling -->
								<Button id="exceptionsItem"
										text="Exception Handling"
										icon="sap-icon://alert"
										iconFirst="false"
										press="onNavItemPress"
										data-route="exceptions"
										class="nav-button"
										type="Transparent"/>
								
								<!-- Audit Report -->
								<Button id="auditItem"
										text="Audit Report"
										icon="sap-icon://document-text"
										iconFirst="false"
										press="onNavItemPress"
										data-route="audit"
										class="nav-button"
										type="Transparent"/>
								
							</VBox>
						</ScrollContainer>
						
						<!-- Footer with Theme Switcher and Copyright -->
						<VBox class="sidebar-footer">
							<VBox class="sapUiMediumMargin">
								<Button text="Switch Theme" 
										icon="sap-icon://lightbulb" 
										press="onThemeToggle"
										class="theme-button"
										type="Emphasized"/>
								
								<Text text="Â© 2025 VPP Auth Systems" 
									  class="copyright-text"/>
							</VBox>
						</VBox>
						
					</VBox>
					
					<!-- Main Content Area -->
					<VBox width="100%" height="100%" class="main-content">
						<Page id="contentPage" showHeader="false">
							<content>
								<!-- Content will be loaded here via routing -->
							</content>
						</Page>
					</VBox>
					
				</layout:HorizontalLayout>
			</content>
		</Page>
	</App>
</mvc:View>
