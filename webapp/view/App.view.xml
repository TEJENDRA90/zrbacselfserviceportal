<mvc:View
	controllerName="rbacselfserviceportal.zrbacselfserviceportal.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	xmlns:core="sap.ui.core"
	displayBlock="true">
	
	<App id="app">
		<Page id="mainPage" showHeader="false">
			<content>
				<tnt:ToolPage id="toolPage" 
							  sideExpanded="true"
							  sideContentWidth="300px">
					
					<tnt:sideContent>
						<tnt:SideNavigation id="sideNavigation" 
											itemSelect="onNavItemSelect"
											expanded="true">
							
							<!-- Header with Logo and Title -->
							<tnt:fixedItem>
								<tnt:NavigationList>
									<tnt:NavigationListItem 
										text="Auth Portal"
										icon="sap-icon://arrow-up"
										selectable="false"
										class="sapUiMediumMarginBottom"/>
								</tnt:NavigationList>
							</tnt:fixedItem>
							
							<!-- Main Navigation Items -->
							<tnt:item>
								<tnt:NavigationList>
									<tnt:NavigationListItem 
										id="dashboardItem"
										text="Dashboard"
										icon="sap-icon://home"
										selectable="true"
										key="dashboard"/>
									
									<tnt:NavigationListItem 
										id="rolesItem"
										text="Role Management"
										icon="sap-icon://person-placeholder"
										selectable="true"
										key="roles"/>
									
									<tnt:NavigationListItem 
										id="assignmentsItem"
										text="Default Assignments"
										icon="sap-icon://document-text"
										selectable="true"
										key="assignments"/>
									
									<tnt:NavigationListItem 
										id="exceptionsItem"
										text="Exception Handling"
										icon="sap-icon://alert"
										selectable="true"
										key="exceptions"/>
									
									<tnt:NavigationListItem 
										id="auditItem"
										text="Audit Report"
										icon="sap-icon://document-text"
										selectable="true"
										key="audit"/>
								</tnt:NavigationList>
							</tnt:item>
							
							<!-- Footer with Theme Switcher and Copyright -->
							<tnt:fixedItem>
								<tnt:NavigationList>
									<tnt:NavigationListItem 
										text="Switch Theme"
										icon="sap-icon://lightbulb"
										selectable="false"
										press="onThemeToggle"
										data-key="theme-toggle"
										class="sapUiMediumMarginTop"/>
									
									<tnt:NavigationListItem 
										text="Â© 2025 VPP Auth Systems"
										selectable="false"
										class="sapUiTinyFontSize sapUiTextColorNeutral"/>
								</tnt:NavigationList>
							</tnt:fixedItem>
							
						</tnt:SideNavigation>
					</tnt:sideContent>
					
					<tnt:mainContents>
						<Page id="contentPage" showHeader="false">
							<content>
								<!-- Content will be loaded here via routing -->
							</content>
						</Page>
					</tnt:mainContents>
					
				</tnt:ToolPage>
			</content>
		</Page>
	</App>
</mvc:View>
